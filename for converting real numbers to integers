%%
[0-9]*\.[0-9]+   {
                    int i;
                    for(i = 0; yytext[i] != '.'; i++)
                        printf("%c", yytext[i]);
                    printf("\n");
                  }
[ \t\n]+         ;   /* ignore whitespace */
.                { printf("Invalid input\n"); }
%%

